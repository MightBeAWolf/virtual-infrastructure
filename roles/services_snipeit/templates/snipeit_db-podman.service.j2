[Unit]
Description=SnipeIT's Mariadb Database Podman Container
Wants=network-online.target
After=network-online.target
RequiresMountsFor=%t/containers

[Service]
Environment=PODMAN_SYSTEMD_UNIT=%n
Restart=on-failure
TimeoutStopSec=70
ExecStartPre=/bin/rm \
  -f %t/%n.ctr-id
ExecStart=/usr/bin/podman run \
  --cidfile=%t/%n.ctr-id \
  --cgroups=no-conmon \
  --rm \
  --sdnotify=conmon \
  -d \
  --replace \
  --name=snipeit_db \
  --pod=snipeit_pod \
  {% for volume in services_snipeit_pod.containers.snipeit_db.volumes %}
  -v "{{ volume.src | default(volume.name) }}:{{ volume.target }}" \
  {% endfor %}
  --env='MARIADB_ROOT_PASSWORD={{ lookup('env', 'SNIPEIT_DB_PASSWORD') }}' \
  --env='USER_UID={{ snipeit_user.uid }}' \
  --env='USER_GID={{ snipeit_user.group }}' \
  docker.io/library/mariadb:{{ services_snipeit_pod.containers.snipeit_db.image_version }}

ExecStop=/usr/bin/podman stop \
  --ignore -t 10 \
  --cidfile=%t/%n.ctr-id
ExecStopPost=/usr/bin/podman rm \
  -f \
  --ignore -t 10 \
  --cidfile=%t/%n.ctr-id
Type=notify
NotifyAccess=all

[Install]
WantedBy=default.target

